@using Microsoft.AspNetCore.Mvc.Localization
@using WebAPP.Infrastructure.GlobalParameters
@inject IViewLocalizer localizer
@model WebAPP.Infrastructure.Models.BiographyDto

<article>
    <div class="d-flex flex-row">
        <div class="p-2"><img src="~/Images/leaves.jpg" alt="Immagine dell'autore" /></div>
        <div class="d-flex flex-column w-100">
            <div class="p-2">@Model.Text</div>
            <div class="p-2"><h4>@localizer["Works"]</h4></div>
            <div class="w-100 p-2">
                <ol class="nav">@foreach (var t in Model.Texts)
                    {
                        <li class="w-100 d-flex flex-row" nav-item><a href="~/StaticFiles/@(t.Id).pdf" target="_blank">@(t.Title)</a>.&nbsp;@(string.IsNullOrEmpty(t.ISBN) ? string.Empty : $"{t.ISBN}.") @(t.Published is null ? string.Empty : $"{t.Published.ToString()}.")</li>
                    }
                </ol>
            </div>
        </div>
        <div class="d-flex flex-row"></div>
    </div>
    <div class="d-flex flex-column">
        <div class="p-2">Flex item 1</div>
        <div class="p-2">Flex item 2</div>
        <div class="p-2">Flex item 3</div>
        <div class="p-2">Flex item 4</div>
        <div class="p-2">Flex item 5</div>
    </div>
    <p class="warningMessage">@(Model.Errors == null ? string.Empty : Model.Errors[0])</p>
</article>

<script type="text/javascript">
    $(function () {
        waitingDialog.show();

        setTimeout(function () { waitingDialog.hide(); }, 2000);
    });

</script>