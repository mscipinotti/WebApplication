@using Microsoft.AspNetCore.Mvc.Localization
@using WebAPP.Infrastructure.Models.enums;
@inject IViewLocalizer localizer
@model WebAPP.Infrastructure.Models.Tokens

<!doctype html>
<html>
    <head>
        <partial name="_Head" />
    </head>
    <body>
    <form method="post" style="width:100vw">
            <partial name="_Header" />
            <div class="container">
                <main role="main" class="pb-3">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <button class="nav-link" asp-controller="News" asp-action="Index">Home</button>
                        </li>
                        @if (Model.Profile == ProfileItems.Administrator)
                        {
                            <li class="nav-item">
                                <button id="Administrator" class="nav-link" asp-controller="Administrator" asp-action="Accounts">@localizer["Administrator"]</button>
                            </li>
                        }
                        @if (Model.Profile == ProfileItems.Administrator || Model.Profile == ProfileItems.Operator)
                        {
                            <li class="nav-item">
                                <button id="Operator" class="nav-link" asp-controller="Operator" asp-action="Index">@localizer["Operator"]</button>
                            </li>
                        }
                        <li class="nav-item">
                            <button id="User" class="nav-link" asp-controller="User" asp-action="Index">@localizer["User"]</button>
                        </li>
                    </ul>
                    @RenderBody()
                    <partial name="_Footer" />
                </main>
            </div>
        </form>
    </body>
</html>