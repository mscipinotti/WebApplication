@using WebAPP.Models
@model SingersDto

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@section Login
{
    @Model.Login
}

<div style="display: flex">
    <nav class="nav flex-column">
        <a class="nav-link active" href="#">Add</a>
        <a class="nav-link disabled" href="#">Modify</a>
        <a class="nav-link disabled" href="#">Delete</a>
    </nav>
    <article>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">StageName</th>
                    <th scope="col">First name</th>
                    <th scope="col">Surname</th>
                    <th scope="col">Age</th>
                    <th scope="col">Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (SingerDto s in Model.Singers)
                {
                    <tr>
                        <th scope="row">@Model.Singers.IndexOf(s)</th>
                        <td>@s.StageName</td>
                        <td>@s.Firstname</td>
                        <td>@s.Surname</td>
                        <td>@s.Age</td>
                        <td>@s.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    </article>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("table tbody tr").on('click', function () {
            var cell = $(this).find(':first');
            var index = cell.text();
            var bColor = index % 2 === 0 ? 'rgba(0, 0, 0, 0.075)' : 'rgba(0, 0, 0, 0.01)';
            var t = $(this).closest("table");
            var activeColor = $(this).css("background-color") == bColor ? 'rgb(240, 248, 255)' : bColor;
            $(this).css("background-color", activeColor);
        });
    });
</script>

