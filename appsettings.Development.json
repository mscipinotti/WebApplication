{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "apiURL": "https://localhost:44396/",
  "ConnectionStrings": {
    "Discography": "Data Source=.;Initial Catalog=Discography;Encrypt=False;Trusted_Connection=True"
  },
  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "internalLogLevel": "Info",
    "internalLogFile": "C:\\temp\\internal-nlog-AspNetCore-FE.txt",
    "extensions": [
      {
        "assembly": "NLog.Web.AspNetCore"
      },
      {
        "assembly": "NLog.Database"
      }
    ],
    "variables": {
      "basedir": "C:\\temp\\"
    },
    "targets": {
      "async": true,
      "db": {
        "type": "Database",
        "commandText": "insert into [account].[Log] ([OperationId], [Layer], [User], [Action], [Level], [Message], [TimeStamp], [Version]) values (@OperationId, 1, @User, @Action, @Level, @Message, @TimeStamp, @Version)",
        "connectionString": "${configsetting:item=ConnectionStrings.Discography}", // legge la propriet√† di cui sopra
        "parameters": [
          {
            "name": "@OperationId",
            "layout": "${scopeproperty:OperationId}",
            "dbType": "DbType.Guid",
            "allowDbNull": "true"
          },
          {
            "name": "@User",
            "layout": "${scopeproperty:User}"
          },
          {
            "name": "@Action",
            "layout": "${scopeproperty:item=Action}",
            "AllowDbNull": "true"
          },
          {
            "name": "@Level",
            "layout": "${level:format=Ordinal}"
          },
          {
            "name": "@Message",
            "layout": "${message}"
          },
          {
            "name": "@TimeStamp",
            "layout": "${date}"
          },
          {
            "name": "@Version",
            "layout": "${scopeproperty:Version}"
          }
        ]
      },
      "fileLog": {
        "type": "File",
        "fileName": "${basedir}logfile-FE.txt",
        "layout": "${longdate}. ${level}. ${logger}. ${message}. ${exception:format=ToString}",
        "keepFileOpen": true,
        "encoding": "utf-8"
      }
    },
    "rules": [
      {
        "logger": "WebAPP.Program",
        "minLevel": "Debug",
        "writeTo": "fileLog",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "db",
        "filterDefaultAction": "Log",
        "filters": [
          {
            "type": "when",
            "condition": "length('${scopeproperty:Version}') == 0",
            "action": "Ignore"
          }
        ]
      }
    ]
  }
}
